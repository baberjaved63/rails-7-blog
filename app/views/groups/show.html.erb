<div class="flex mt-4 gap-6">

<div class="w-2/3">
  <h1 class="text-2xl"><%= @group.name %></h1>
  <%= render Posts::CreateFormComponent.new(group: @group, post: @new_post) %>
  <h1 class="text-2xl mt-5 mb-3"><u>All Posts</u></h1>
  <%= render(Posts::ListComponent.new(posts: @posts, current_user: @current_user)) %>
</div>

<div class="w-1/3">
  <h2 class="text-2xl">Members</h2>
  <%= render Groups::MembersListComponent.new(members: @members, current_user: current_user) %>
</div>
</div>
