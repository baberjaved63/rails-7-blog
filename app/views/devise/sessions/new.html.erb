<link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">

<div class="container mx-auto mt-8 pt-8">
  <div class="flex items-center justify-center">
    <div class="w-1/3">
      <div class="p-4 w-full max-w-sm bg-white rounded-lg border border-gray-200 shadow-md sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
          <div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="">
                  <h3 class="text-2xl font-bold text-center">Login</h3>
                    <div class="mt-4">
                        <div>
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
                        </div>
                        <div class="mt-4">
                          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
                        </div>
                        <div class="flex items-baseline justify-between">
                          <%= f.submit "Log in", class: "px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900 w-full" %>
                        </div>
                    </div>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
